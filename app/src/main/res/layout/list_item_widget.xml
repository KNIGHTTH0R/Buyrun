<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widgetSingleItem">

    <ImageView
        android:id="@+id/widgetItemImage"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_img_placeholder"
        tools:src="@drawable/no_img_placeholder"
        android:contentDescription="@string/a11y_place_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widgetItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Some Place"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/widgetItemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Some Type"
            android:textSize="16sp"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingEnd="2dp"
            android:maxLines="1"
            />

    </LinearLayout>


</LinearLayout>